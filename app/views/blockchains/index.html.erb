<p id="notice"><%= notice %></p>

<h1>Blockchains</h1>

<table>
  <thead>
    <tr>
      <th>Chain</th>
      <th>Pool</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blockchains.each do |blockchain| %>
      <tr>
        <td><%= blockchain.chain %></td>
        <td><%= blockchain.pool %></td>
        <td><%= blockchain.address %></td>
        <td><%= link_to 'Show', blockchain %></td>
        <td><%= link_to 'Edit', edit_blockchain_path(blockchain) %></td>
        <td><%= link_to 'Destroy', blockchain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blockchain', new_blockchain_path %>
